extends layout

block content
  h1=title
  ul.errors
    if errors
      each error, i in errors
        li.alert.alert-danger #{error.msg}
  form(method='post', action='/posts/add', enctype = 'multipart/form-data' class='postform')
    .form-group
      label Title:
      input.form-control(name='title',type='text' required)
    .form-group
      label Category
      select.form-control(name='category')
        each category, i in categories
          option(value='#{category.title}') #{category.title}
    .form-group
      label Body
      textarea.font-control(name='body', id='body' required)
    .form-group
      label Main Image:
      input.form-control(name='mainimage', type='file')
    .form-group
      label Author:
      input.form-control(name='author', type='text' required )
    input.btn.btn-default(name='submit',type='submit', value='Save')
    script(src='/ckeditor/ckeditor.js')
    script
      | CKEDITOR.replace('body')
